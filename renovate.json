{
  "automerge": true,
  "recreateClosed": true,
  "rebaseStalePrs": true,
  "separateMajorMinor": false,
  "major": {
    "automerge": false
  },
  "schedule": ["before 10am"],
  "packageRules": [
    {
      "packagePatterns": ["^yoshi"],
      "schedule": ["before 10am"],
      "groupName": "yoshi packages"
    },
    {
      "packagePatterns": ["^wix-ui", "^wix-style-react"],
      "groupName": "wix UI packages"
    },
    {
      "packagePatterns": ["^react"],
      "schedule": ["before 10am"],
      "groupName": "react packages"
    },
    {
      "packagePatterns": ["^express"],
      "groupName": "express packages"
    }
  ],
  "requiredStatusChecks": []
}
